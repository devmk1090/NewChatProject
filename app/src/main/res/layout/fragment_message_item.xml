<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- 상대방-->
    <LinearLayout
        android:id="@+id/yourChatArea"
        android:visibility="visible"
        android:padding="2dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rcvProfile"
            android:src="@drawable/profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:maxWidth="230dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/left_bubble"
            android:id="@+id/rcvTxt"
            android:padding="13dp"
            android:textColor="#000"
            android:text="받는 사람"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:maxWidth="230dp"
            android:maxHeight="230dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/rcvImage"
            android:padding="3dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:padding="2dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/rcvUnreadCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/rcvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textAlignment="textStart"
                android:textColor="#68747C"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/rcvAfterImage"
            android:visibility="visible"
            android:src="@drawable/icon"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
    </LinearLayout>

    <!-- 방 나갔을때-->
    <LinearLayout
        android:id="@+id/exitArea"
        android:visibility="gone"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/exitTxt"
            android:padding="7dp"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- 내가 쓴 글-->
    <LinearLayout
        android:id="@+id/myChatArea"
        android:padding="2dp"
        android:layout_gravity="right"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/sendAfterImage"
            android:visibility="gone"
            android:src="@drawable/icon"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <LinearLayout
            android:padding="2dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sendUnreadCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="10dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/sendDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textSize="10dp"
                android:textColor="#68747C"/>
        </LinearLayout>
        <TextView
            android:maxWidth="250dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/right_bubble"
            android:id="@+id/sendTxt"
            android:padding="13dp"
            android:textColor="#000000"
            android:text="보내는 사람"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:maxWidth="250dp"
            android:maxHeight="250dp"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/sendImage"
            android:padding="3dp"
            android:scaleType="fitCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/afterArea"
        android:visibility="gone"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="누구님이 누구에게 애프터 신청을 하셨습니다"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/afterTxt"
            android:padding="7dp"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:layout_height="wrap_content"/>
        <Button
            android:visibility="gone"
            android:id="@+id/afterYesButton"
            android:layout_marginLeft="50dp"
            android:text="승락"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/afterTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:visibility="gone"
            android:id="@+id/afterNoButton"
            android:layout_marginRight="50dp"
            android:text="거절"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/afterTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>