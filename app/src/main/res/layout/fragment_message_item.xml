<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- 상대방-->
    <LinearLayout
        android:id="@+id/yourChatArea"
        android:visibility="gone"
        android:padding="2dp"
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rcvProfile"
            android:layout_gravity="center"
            android:src="@drawable/profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:maxWidth="230dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/left_bubble"
            android:id="@+id/rcvTxt"
            android:padding="13dp"
            android:textColor="#000"
            android:text="받는 사람"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:padding="2dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/rcvUnreadCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/rcvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textAlignment="textStart"
                android:textColor="#68747C"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/afterYesImage"
            android:visibility="visible"
            android:src="@drawable/icon_heart"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </LinearLayout>

    <!-- 방 나갔을때-->
    <LinearLayout
        android:id="@+id/exitArea"
        android:visibility="gone"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<!--        <com.google.android.gms.ads.AdView-->
<!--            ads:adUnitId="@string/ad_unit_id"-->
<!--            ads:adSize="SMART_BANNER"-->
<!--            android:id="@+id/message_adView"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="50dp">-->
<!--        </com.google.android.gms.ads.AdView>-->
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/exitTxt"
            android:padding="7dp"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- 내가 쓴 글-->
    <LinearLayout
        android:id="@+id/myChatArea"
        android:padding="2dp"
        android:layout_margin="2dp"
        android:layout_gravity="right"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="2dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sendUnreadCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="10dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/sendDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textSize="10dp"
                android:textColor="#68747C"/>
        </LinearLayout>
        <TextView
            android:maxWidth="250dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/right_bubble"
            android:id="@+id/sendTxt"
            android:padding="13dp"
            android:textColor="#000000"
            android:text="보내는 사람"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/afterArea"
        android:visibility="visible"
        android:padding="10dp"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/afterTxt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="누구님이 누구에게 애프터 신청을 하셨습니다"
                android:visibility="visible"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/afterTxt"
                android:padding="7dp"
                android:textColor="#9C27B0"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:textSize="17dp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_below="@+id/afterTxt_layout"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:background="@drawable/custom_afterbutton"
                android:visibility="visible"
                android:id="@+id/afterYesButton"
                android:layout_marginLeft="50dp"
                android:text="수락"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:background="@drawable/custom_afterbutton"
                android:visibility="visible"
                android:id="@+id/afterNoButton"
                android:layout_marginRight="50dp"
                android:text="거절"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>