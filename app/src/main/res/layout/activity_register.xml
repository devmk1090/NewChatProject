<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FF6A95"
    tools:context=".RegisterActivity">
    <TextView
        android:textSize="20dp"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:text="# 닉네임은 어플내에서만 사용되며,"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="20dp"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:text="상대방이 구글 계정 정보를 알 수 없습니다."
        android:textColor="#ffffff"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="20dp"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:text="# 특수문자는 사용할 수 없습니다"
        android:textColor="#ffffff"
        android:layout_marginBottom="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/signUp_nick_editText"
            android:layout_weight="1"
            android:maxLength="10"
            android:hint="8글자 내의 닉네임"
            android:textColorHint="#ffffff"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginRight="20dp"
            android:id="@+id/signUp_duplication"
            android:text="중복확인"
            android:textColor="#ffffff"
            android:background="@drawable/custom_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/signUp_FinishButton"
        android:text="닉네임 만들기"
        android:textColor="#ffffff"
        android:background="@drawable/custom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>